{
	"manifest_version" : 2,
	"name" : "Amazon cleaner",
	"version" : "0.1",

	"background": {
		"scripts": ["scripts/popup.js"],
		"persistent": true
	},

	"permissions": [
        "tabs",
        "http://*/",
        "https://*/",
        "storage"
    ],

	"browser_action" : {
		"default_popup" : "html/frontpage.html",
		"default_title" : "Clean Amazon results"
	}
}